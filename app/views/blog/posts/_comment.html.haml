%li.comment.depth-1
  .comment-container
    .comment-author.vcard
      = image_tag comment.avatar_url, :alt => comment.name, :class => "avatar avatar-75 photo", :height => "75", :width => "75"
      %cite.fn= comment.name
    .comment-meta.commentmetadata
      .intro
        .commentDate
          %a{:href => "#"}= t('blog.posts.comments.time_ago', :time => time_ago_in_words(comment.created_at))
      .comment-body
        %p
          = simple_format auto_link(comment.message.to_s)
